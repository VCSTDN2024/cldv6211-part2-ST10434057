@using Azure.Core

@model IEnumerable<WebAppPart1ST10434057.Models.Booking>

@{
    ViewData["Title"] = "Booking";
}
<h2>All Bookings</h2>
<a asp-action="Create">Create Booking</a>

<form asp-controller="Bookings" asp-action="Index" method="get">
    <p>
       Search: <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" />
       <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Customer</th>
            <th>Contact</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Event?.EventName</td>
                <td>@booking.CustomerName</td>
                <td>@booking.ContactDetails</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.BookingID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@booking.BookingID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@booking.BookingID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

